{
  "name": "dog-adoption-platform",
  "private": true,
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "dev": "concurrently -k -n server,web -c green,cyan \"npm run dev --workspace server\" \"npm run dev --workspace web\"",
    "server": "npm run dev --workspace server",
    "web": "npm run dev --workspace web",
    "test": "npm run test --workspace server",
    "build": "npm run build --workspace web",
    "start": "npm run start --workspace server"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}